{
  "variable": {
    "TAG": {
      "default": "latest"
    }
  },
  "group": {
    "default": {
      "targets": ["flap"]
    }
  },
  "target": {
    "flap": {
      "context": ".",
      "dockerfile": "build/Dockerfile",
      "tags": ["ghcr.io/amirhnajafiz/flap:${TAG}"],
      "output": ["type=registry"]
    }
  }
}
